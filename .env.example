# MLOps Studio Environment Variables

# Frontend
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=MLOps Studio
VITE_ENVIRONMENT=development

# Backend
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/mlopsdb
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mlopsdb
DB_USER=postgres
DB_PASSWORD=password

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5001
MLFLOW_BACKEND_STORE_URI=postgresql://postgres:password@localhost:5432/mlflow
MLFLOW_ARTIFACT_ROOT=s3://mlops-artifacts-dev/mlflow

# AWS (for local development with LocalStack)
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ACCOUNT_ID=000000000000

# S3
S3_DATA_BUCKET=mlops-data-dev
S3_MODELS_BUCKET=mlops-models-dev
S3_ARTIFACTS_BUCKET=mlops-artifacts-dev

# GitHub Integration
GITHUB_OAUTH_CLIENT_ID=your_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_client_secret
GITHUB_ORG=your-org

# Integrations
SLACK_WEBHOOK_URL=
DATADOG_API_KEY=
PAGERDUTY_API_KEY=

# Security
JWT_SECRET=your-secret-key-change-in-production
SESSION_SECRET=your-session-secret

# Feature Flags
ENABLE_CANARY_DEPLOYMENTS=true
ENABLE_BLUE_GREEN_DEPLOYMENTS=true
ENABLE_AUTO_ROLLBACK=true
DRIFT_DETECTION_ENABLED=true
